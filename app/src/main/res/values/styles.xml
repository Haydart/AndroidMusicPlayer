<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AlbumSongListHeaderTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MusicPlaybackSongTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlaybackSongArtistStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_half_alpha</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MusicPlaybackSongAlbumStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_quarter_alpha</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
